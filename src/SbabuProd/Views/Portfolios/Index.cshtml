@model IEnumerable<Sbabu.Web.Models.Portfolio>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<div class="sky-form">
    <a asp-action="Create">Create New</a>
    <header>Portfolio List</header>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PortfolioDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortfolioName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortfolioType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
