@model Sbabu.Web.ViewModels.PortfolioViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="clearfromtop"></div>
<form asp-action="Create" enctype="multipart/form-data" class="sky-form">
    <header>Add Portfolio</header>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <fieldset>
        <div class="form-group col col-4">
            <label asp-for="PortfolioType"></label>
            <select asp-for="PortfolioType">
                <option value="">Select</option>
                <option value="1">Photo</option>
                <option value="2">Video</option>
                <option value="3">DJ</option>
            </select>
            <span asp-validation-for="PortfolioType" class="text-danger" />
        </div>
        <div class="form-group col col-4">
            <label asp-for="PortfolioName"></label>
            <input asp-for="PortfolioName" class="form-control" />
            <span asp-validation-for="PortfolioName" class="text-danger" />
        </div>
        <div class="form-group col col-4">
            <label asp-for="PortfolioDescription"></label>
            <input asp-for="PortfolioDescription" class="form-control" />
            <span asp-validation-for="PortfolioDescription" class="text-danger" />
        </div>
        <div class="form-group col col-4">
            <label asp-for="Url"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger" />
        </div>
        <div class="form-group col col-4">
            <label asp-for="Url"></label>
            <input asp-for="Image" type="file" />
            <span asp-validation-for="Url" class="text-danger" />
        </div>
    </fieldset>
    <footer>
        <a asp-action="Index">Back to List</a>
        <input type="submit" value="Create" class="button" />
    </footer>

</form>



@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
