@model Sbabu.Web.Models.Portfolio

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Portfolio</h4>
        <hr/>
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="PortfolioType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PortfolioType" class="form-control">
                    <option selected="selected" value="0">Select</option>
                    <option value="1">Photo</option>
                    <option value="2">Video</option>
                    <option value="3">DJ</option>
                </select>
                <span asp-validation-for="PortfolioType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PortfolioName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PortfolioName" class="form-control" />
                <span asp-validation-for="PortfolioName" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="PortfolioDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PortfolioDescription" class="form-control" />
                <span asp-validation-for="PortfolioDescription" class="text-danger" />
            </div>
        </div>
     
      
        <div class="form-group">
            <label asp-for="Url" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
